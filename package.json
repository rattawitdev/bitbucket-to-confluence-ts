{
  "name": "bitbucket-to-confluence-ts",
  "version": "1.0.0",
  "description": "Automated pipeline to transform backend source code into technical documentation using Claude 4.0 Sonnet and Confluence API",
  "main": "dist/index.js",
  "bin": {
    "doc-pipeline": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "nodemon --exec ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "cli": "node dist/cli.js",
    "pipeline:watch": "npm run build && node dist/cli.js --watch",
    "pipeline:all": "npm run build && node dist/cli.js --process-all",
    "pipeline:changed": "npm run build && node dist/cli.js --changed-only",
    "pipeline:staged": "npm run build && node dist/cli.js --staged-only",
    "pipeline:overview": "npm run build && node dist/cli.js --generate-overview",
    "hooks:install": "npm run build && node dist/cli.js --install-hooks",
    "hooks:uninstall": "npm run build && node dist/cli.js --uninstall-hooks",
    "dry-run:all": "npm run build && node dist/cli.js --process-all --dry-run",
    "dry-run:changed": "npm run build && node dist/cli.js --changed-only --dry-run",
    "repo:validate": "npm run build && node dist/cli.js --validate-repo --repository",
    "repo:process": "npm run build && node dist/cli.js --process-all --repository",
    "repo:overview": "npm run build && node dist/cli.js --generate-overview --repository",
    "clean": "rm -rf dist logs *.log",
    "clean:all": "npm run clean && rm -rf node_modules confluence-mapping.json",
    "prepare": "npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "typescript",
    "claude",
    "confluence",
    "documentation",
    "automation",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "axios": "^1.6.0",
    "chokidar": "^3.5.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "markdown-it": "^13.0.2",
    "simple-git": "^3.20.0",
    "tree-sitter": "^0.20.4",
    "tree-sitter-go": "^0.20.0",
    "tree-sitter-java": "^0.20.2",
    "tree-sitter-c-sharp": "^0.20.0",
    "winston": "^3.11.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/markdown-it": "^13.0.6",
    "@types/node": "^20.9.0",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
