# Documentation Pipeline Configuration

# Claude AI Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4000

# Confluence Configuration
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_USERNAME=your.email@domain.com
CONFLUENCE_API_TOKEN=your_confluence_api_token
CONFLUENCE_SPACE_KEY=YOUR_SPACE_KEY

# Source Code Configuration
SOURCE_DIRECTORIES=./src,./api,./services
INCLUDE_LANGUAGES=go,java,csharp
EXCLUDE_PATTERNS=node_modules,.git,dist,build,*.test.*,*.spec.*,target,bin,obj

# Pipeline Behavior
WATCH_MODE=false
DRY_RUN=false
LOG_LEVEL=info

# Optional: Custom Configuration
# PAGE_MAPPING_FILE=confluence-mapping.json
# BATCH_SIZE=5
# DELAY_BETWEEN_BATCHES=1000
